#include<stdio.h>
#include<stdlib.h>

/**创建邻接矩阵图*/
int main()
{
	int a[10][10] = { 0 };
	int m, n;
	char i;
	while (1)
	{
		printf("请输入相邻两边，结束为0\n");
		scanf("%c", &i); 
		if (i == '0')
			break;
		m = i - 97;
		getchar();
		scanf("%c", &i);
		n = i - 97;
		a[m][n] = a[n][m] = 1;
		getchar();
	}
	return 0;
}
